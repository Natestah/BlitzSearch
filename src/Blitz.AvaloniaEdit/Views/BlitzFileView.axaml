<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:viewModels="clr-namespace:Blitz.AvaloniaEdit.ViewModels"
             x:Class="Blitz.AvaloniaEdit.Views.BlitzFileView"
             x:DataType="viewModels:BlitzEditorViewModel"
             xmlns:AvalonEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
             >
    <AvalonEdit:TextEditor x:Name="AvaloniaTextEditor"
                           IsTabStop="False"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           CornerRadius="0"
                           WordWrap="False"
                           IsReadOnly="True"
                           ShowLineNumbers="True"
                           FontFamily="{Binding SelectedFontFamily}"
                           HorizontalScrollBarVisibility="Auto"
                           VerticalScrollBarVisibility="Visible"
                            />
    
</UserControl>
